{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "common",
			"hidden": true,
			"cacheVariables": {
				"SKSE_SUPPORT_XBYAK": "ON"
			},
			"binaryDir": "${sourceDir}/build"
		},
		{
			"name": "vcpkg",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": {
					"type": "STRING",
					"value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
				},
				"VCPKG_OVERLAY_PORTS": {
					"type": "STRING",
					"value": "${sourceDir}/cmake/ports/"
				},
				"VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
			}
		},
		{
			"name": "win64",
			"hidden": true,
			"architecture": "x64",
			"cacheVariables": {
				"CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>DLL"
			}
		},
		{
			"name": "msvc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_CXX_FLAGS": "/utf-8 /EHsc /MP /W4 /WX $penv{CXXFLAGS}"
			},
			"generator": "Visual Studio 17 2022",
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"intelliSenseMode": "windows-msvc-x64",
					"clangTidyChecks": "modernize*,performance*,readability*,portability*,bugprone*,cert*,misc*,clang-analyzer*,-clang-analyzer-cplusplus.NewDeleteLeaks,-clang-analyzer-cplusplus.InnerPointer,-clang-analyzer-cplusplus.VirtualCall,-clang-analyzer-cplusplus.NewDelete,-clang-analyzer-cplusplus.UninitializedObject,-clang-analyzer-cplusplus.Move,-clang-analyzer-cplusplus.SmartPtr,-clang-analyzer-cplusplus.VirtualBase,-clang-analyzer-cplusplus.PureVirtualCall,-clang-analyzer-cplusplus.NewDeleteLeaks,-clang-analyzer-cplusplus.NewDelete,-clang-analyzer-cplusplus.InnerPointer,-clang-analyzer-cplusplus.VirtualCall,-clang-analyzer-cplusplus.NewDelete,-clang-analyzer-cplusplus.UninitializedObject,-clang-analyzer-cplusplus.Move,-clang-analyzer-cplusplus.SmartPtr,-clang-analyzer-cplusplus.VirtualBase,-clang-analyzer-cplusplus.PureVirtualCall",
					"enableMicrosoftCodeAnalysis": false,
					"enableClangTidyCodeAnalysis": true
				}
			}
		},
		{
			"name": "SE/AE",
			"cacheVariables": {
				"BUILD_SKYRIM": true,
				"ENABLE_SKYRIM_AE": "ON",
				"ENABLE_SKYRIM_SE": "ON",
				"ENABLE_SKYRIM_VR": "OFF",
				"AUTO_PLUGIN_DEPLOYMENT": "ON"
			},
			"inherits": [
				"common",
				"vcpkg",
				"win64",
				"msvc"
			]
		},
		{
			"name": "VR",
			"cacheVariables": {
				"BUILD_SKYRIM": true,
				"ENABLE_SKYRIM_AE": "OFF",
				"ENABLE_SKYRIM_SE": "OFF",
				"ENABLE_SKYRIM_VR": "ON",
				"AUTO_PLUGIN_DEPLOYMENT": "ON"
			},
			"inherits": [
				"common",
				"vcpkg",
				"win64",
				"msvc"
			]
		}
	]
}